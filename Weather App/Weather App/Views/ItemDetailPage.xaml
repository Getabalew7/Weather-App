<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Weather_App.Views.ItemDetailPage"
             Title="{Binding Name}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="City:" FontSize="Medium"  TextColor="Black" />
        <Label Text="{Binding Name}" FontSize="Small"  TextColor="Black"/>
        <Label Text="Country:" FontSize="Medium"  TextColor="Black"/>
        <Label Text="{Binding Country}" FontSize="Small"  TextColor="Black"/>
    </StackLayout>
    
</ContentPage>